{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteProperties": "preserve",
      "semicolons": "always",
      "trailingComma": "all",
      "indentStyle": "space",
      "quoteStyle": "double"
    }
  },

  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "indentStyle": "space",
    "ignore": [
      "node_modules/**",
      "test/snapshots",
      "test/fixtures",
      ".next",
      "test/js/deno",
      "src/deps",
      "src/bun.js/WebKit",
      "packages/bun-polyfills"
    ]
  }
}
