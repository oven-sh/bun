{
  "compilerOptions": {
    "lib": ["ESNext"],
    "skipLibCheck": false,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "disableSolutionSearching": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"]
}
